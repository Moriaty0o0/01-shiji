\setupMPvariables
  [烏絲欄]
  [baseline=\the\baselineskip
  ,lines=\gujiparameter{每頁列數}%
  ,chwd=\the\dimexpr \gujiparameter{正文字體寬}\bodyfontsize \relax
  ]

\startuseMPgraphic{烏絲欄}{baseline,lines,chwd}
StartPage ;
path p[] ;
numeric l, n, w, dw ;

l := \MPvar{baseline} ;
n := \MPvar{lines} ;
w := \MPvar{chwd} ;
dw := (l-w) ;

z1 = Location[Text][Text] + (0,TextHeight) ;
z2 = Location[Text][Text] + (0,-3l) ;
z3 = .5[z1,z2] + (TextWidth,dw) ;

p0 := origin shifted (0,dw) -- origin shifted (TextWidth,dw) ;
p1 := p0 -- reverse p0 shifted (0, l) -- cycle ;
p2 := p0 shifted (0,-l) -- reverse p0 -- cycle ;
p3 := p0 shifted z1 -- reverse p0 shifted z2 -- cycle ;

for i=1 upto n :
  draw p1 shifted (z1+(0,-i*l)) withcolor .85\MPcolor{orange} ;
  draw p2 shifted (z2+(0, i*l)) withcolor .85\MPcolor{orange} ;
endfor

draw p3 enlarged 6pt withpen pensquare scaled 4pt withcolor .85\MPcolor{orange} ;

label.ulft(textext("\ssxx \chinesenumerals{\the\numexpr2*\pageno-1\relax}"),z3) withcolor blue ;
label.llft(textext("\ssxx \chinesenumerals{\the\numexpr2*\pageno\relax}"),z3) withcolor blue ;
StopPage ;
\stopuseMPgraphic






















