\definefontfeature
  [zhengwen]
  [default]
  [wenzi=%
    {baseline=\gujiparameter{基線深度}%
    ,anchor=\gujiparameter{對齊方式}%
    ,rotate%
    ,expand={x=\gujiparameter{正文字體寬}%
            ,y=\gujiparameter{正文字體高}}%
    ,trace=\gujiparameter{調試模式}%
    }%
  ,mode=node%
  ]
\definefontfeature
  [jiazhu]
  [default]
  [wenzi=%
    {baseline=\gujiparameter{基線深度}%
    ,anchor=\gujiparameter{對齊方式}%
    ,rotate=90%
    ,expand={x=\gujiparameter{夾注字體寬}%
            ,y=\gujiparameter{夾注字體高}}%
    ,trace=\gujiparameter{調試模式}%
    }%
  ,mode=node%
  ]
\definefontfeature
  [meipi]
